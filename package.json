{
  "name": "blastapi",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.15.0",
  "description": "A monorepo for BlastAPI, containing all applications and packages.",
  "scripts": {
    "dev": "pnpm --filter @blastapi/db db:generate && pnpm -r dev",
    "build": "pnpm run build:clean && pnpm --filter @blastapi/db db:generate && pnpm --filter @blastapi/db db:deploy && pnpm -r build",
    "build:clean": "pnpm -r exec rm -rf dist tsconfig.tsbuildinfo",
    "start": "pnpm -r start",
    "lint": "eslint \"apps/**/*.{ts,tsx}\" \"packages/**/*.{ts,tsx}\" --fix",
    "lint:css": "stylelint \"apps/web/**/*.{css,scss,postcss}\" --fix",
    "format": "prettier --write \"apps/**/*.{ts,tsx,json}\" \"packages/**/*.{ts,tsx,json}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/compat": "^1.2.9",
    "@next/eslint-plugin-next": "^15.4.4",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.5.3",
    "stylelint": "^16.20.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "stylelint-order": "^7.0.0",
    "stylelint-prettier": "5.0.3",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.{css,scss,postcss}": [
      "stylelint --fix"
    ]
  }
}
